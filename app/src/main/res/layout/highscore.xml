                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/score4"
                    android:text="4."
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </RelativeLayout>

            <!-- player5 -->

            <RelativeLayout
                android:id="@+id/player5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/player4" >

                <TextView
                    android:id="@+id/score5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/name5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/score5"
                    android:text="5."
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </RelativeLayout>

            <!-- player6 -->

            <RelativeLayout
                android:id="@+id/player6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/player5" >

                <TextView
                    android:id="@+id/score6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/name6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/score6"
                    android:text="6."
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </RelativeLayout>

            <!-- player7 -->

            <RelativeLayout
                android:id="@+id/player7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/player6" >

                <TextView
                    android:id="@+id/score7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/name7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/score7"
